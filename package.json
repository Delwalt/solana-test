{
  "name": "gkmit-react-boilerplate",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "bp": "cargo build-bpf --manifest-path=./program/Cargo.toml --bpf-out-dir=./program/dist",
    "cp": "cargo clean --manifest-path=./program/Cargo.toml",
    "dp": "solana program deploy ./program/dist/hello_rust.so",
    "lp": "cross-env PROGRAM_ID=\"$npm_config_programId\" sh -c 'solana logs | grep \"$PROGRAM_ID invoke\" -A 3'",
    "preview": "vite preview",
    "lint": "eslint src --ext ts,tsx,js --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write --no-error-on-unmatched-pattern src/**/*.{ts,tsx,js,cjs,css,md,json,scss,html} --config ./.prettierrc.json",
    "lint:format": "npm run lint && npm run format",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@project-serum/anchor": "^0.26.0",
    "@solana/spl-token": "^0.4.3",
    "@solana/wallet-adapter-base": "^0.9.23",
    "@solana/wallet-adapter-phantom": "^0.9.24",
    "@solana/wallet-adapter-react": "^0.15.35",
    "@solana/wallet-adapter-react-ui": "^0.9.35",
    "@solana/wallet-adapter-wallets": "^0.19.32",
    "@solana/web3.js": "^1.91.2",
    "buffer": "^6.0.3",
    "crypto-browserify": "^3.12.0",
    "node-stdlib-browser": "^1.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "vite-plugin-node-stdlib-browser": "^0.2.1"
  },
  "devDependencies": {
    "@testing-library/dom": "^9.3.1",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/node": "^20.4.2",
    "@types/react": "^18.2.14",
    "@types/react-dom": "^18.2.6",
    "@types/testing-library__jest-dom": "^5.14.9",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "@typescript-eslint/parser": "^5.61.0",
    "@vitejs/plugin-react": "^4.0.1",
    "@vitest/coverage-v8": "^0.33.0",
    "@vitest/ui": "^0.33.0",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard-with-typescript": "^36.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.1",
    "husky": ">=6",
    "jsdom": "^22.1.0",
    "lint-staged": ">=10",
    "postcss": "^8.4.38",
    "prettier": "3.0.0",
    "prettier-eslint": "^15.0.1",
    "tailwindcss": "^3.4.3",
    "typescript": "*",
    "vite": "^4.4.0",
    "vitest": "^0.33.0"
  },
  "lint-staged": {}
}
